<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <ListPreference
          android:key="units"
          android:title="Units"
          android:dialogTitle="@string/pref_units"
          android:entries="@array/pref_units_entries"
          android:entryValues="@array/pref_units_values"
          android:defaultValue="@string/pref_units_default" />
  <ListPreference
          android:key="period"
          android:title="Period"
          android:dialogTitle="Period"
          android:entries="@array/pref_period_entries"
          android:entryValues="@array/pref_period_values"
          android:defaultValue="@string/pref_period_default" />
  <CheckBoxPreference
          android:key="notification"
          android:title="Show notification?"
          android:defaultValue="true" />
</PreferenceScreen>